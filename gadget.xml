<Module>
	<ModulePrefs title="Organic Poetry Gadget" height="320">
		<Require feature="wave" /> 
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<Content type="html">
		<![CDATA[
		<link type="text/css" rel="stylesheet"
					href="http://organic-poetry.googlecode.com/hg/poetry.css"
					/>
		<link type="text/css" rel="stylesheet"
					href="http://organic-poetry.googlecode.com/hg/jquery-ui-1.7.2.custom.css"
					/>
		<script type="text/javascript"
						src="http://organic-poetry.googlecode.com/hg/json2min.js"></script>
		<script type="text/javascript"
						src="http://organic-poetry.googlecode.com/hg/jquery-1.3.2.min.js"></script>
		<script type="text/javascript"
						src="http://organic-poetry.googlecode.com/hg/jquery-ui-1.7.2.custom-drag-resize.min.js"></script>
		<script type="text/javascript"
						src="http://organic-poetry.googlecode.com/hg/organic.js"></script>
		<div id="op-container">
			<div id="debug">Waiting for dragging the image get started...</div>
			<div id="controls">
				<input id="newWord" type="text" value=""/>
				<input id="add" type="button" value="Add"/>
				Or
				<input id="delete" type="button" value="Delete Subtree"/>
			</div>
			<div id="organic-poetry">
				<canvas id="op-back" width="295px" height="295px"></canvas>
			</div>
		</div>
		]]>
	</Content>
</Module>